{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./build/tsconfig.json.tsbuildinfo",
    "module": "esnext",
    "target": "es5",
    "lib": ["es2022", "dom"],
    "jsx": "preserve",
    "moduleResolution": "bundler",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": false,
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src"
  },
  "include": ["src/**/*"],
  "exclude": ["build", "node_modules"],
  "references": [{ "path": "../toolpad-utils" }]
}
